---
import { Image } from 'astro:assets';
import { LinkButton } from '@astrojs/starlight/components';
interface Props {
  title: string;
  image: any; // Astro image import
  imageAlt: string;
  learnMoreLink: string;
  reverse?: boolean;
}
const { title, image, imageAlt, learnMoreLink, reverse = false } = Astro.props;
---
<div class={`flex gap-8 items-center py-4 ${reverse ? 'flex-row-reverse' : ''} max-[900px]:!flex-col max-[900px]:items-stretch`}>
  <div class="flex-1 relative rounded-lg overflow-hidden min-w-[320px] max-w-[520px] flex items-center justify-center">
    <Image
      src={image}
      alt={imageAlt}
      class="w-full h-auto aspect-video object-cover rounded-lg block"
      loading="lazy"
      fit="cover"
      style="aspect-ratio: 16/9;"
    />
  </div>
  <div class={`flex-1 p-4 flex flex-col justify-center ${reverse ? 'items-end text-right' : 'items-start text-left'} max-[900px]:!items-start max-[900px]:!text-left`}>
    <h2 class="text-3xl font-bold mb-4 text-slate-900 dark:text-slate-100">
      {title}
    </h2>
    <div class="mb-6 leading-relaxed text-slate-700 dark:text-slate-300">
      <slot />
    </div>
    <LinkButton
      href={learnMoreLink}
      variant="primary"
      class="mt-2"
    >
      Learn More
    </LinkButton>
  </div>
</div>
