<script>
  // Client-side script to handle tab switching
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('[data-step-tab]');
    const stepContents = document.querySelectorAll('[data-step-content]');

    function showStep(stepIndex: number) {
      // Hide all step contents
      stepContents.forEach((content, index) => {
        if (index === stepIndex) {
          content.classList.remove('hidden');
        } else {
          content.classList.add('hidden');
        }
      });

      // Update tab states
      tabs.forEach((tab, index) => {
        const numberSpan = tab.querySelector('[data-step-number]');
        if (index === stepIndex) {
          tab.classList.add('bg-white', 'dark:bg-slate-700', 'text-slate-900', 'dark:text-slate-100', 'border-slate-200', 'dark:border-slate-600', 'shadow-sm');
          tab.classList.remove('bg-transparent', 'text-slate-600', 'dark:text-slate-400', 'border-transparent');
          if (numberSpan) {
            numberSpan.classList.add('bg-blue-500', 'text-white');
            numberSpan.classList.remove('bg-slate-200', 'dark:bg-slate-600', 'text-slate-600', 'dark:text-slate-400');
          }
        } else {
          tab.classList.remove('bg-white', 'dark:bg-slate-700', 'text-slate-900', 'dark:text-slate-100', 'border-slate-200', 'dark:border-slate-600', 'shadow-sm');
          tab.classList.add('bg-transparent', 'text-slate-600', 'dark:text-slate-400', 'border-transparent');
          if (numberSpan) {
            numberSpan.classList.remove('bg-blue-500', 'text-white');
            numberSpan.classList.add('bg-slate-200', 'dark:bg-slate-600', 'text-slate-600', 'dark:text-slate-400');
          }
        }
      });
    }

    // Add click handlers to tabs
    tabs.forEach((tab, index) => {
      tab.addEventListener('click', () => showStep(index));
    });

    // Initialize with first step
    showStep(0);
  });
</script>

